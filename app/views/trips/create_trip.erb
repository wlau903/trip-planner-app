<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Create a Trip</h1>

<form action="/trips" method="post">

  <input type="text" name="name" placeholder="Trip Name:">

  <input type="date" name="date" placeholder="Date: (mm-dd-yyyy) ">
  <!-- delete date placeholder?-->
  <input type="text" name="destination" placeholder="Destination:">

  <input type="text" name="activities" placeholder="Activities:">

  <input type="text" name="notes" placeholder="Notes: (optional) ">

  <input type="submit" name="submit" value="Create Trip">
</form>

<a href="/users/<%= current_user.slug %>">My Trips</a>
<a href="/logout">Logout</a>
